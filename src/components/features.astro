---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Improve efficiency and productivity",
    description:
      "BI empowers businesses to pinpoint opportunities for enhanced efficiency and productivity. For instance, it can uncover production process bottlenecks and areas of waste.",
    icon: "eos-icons:service-plan",
  },
  {
    title: "Reduce costs",
    description:
      "BI aids businesses in identifying and mitigating costs. For instance, it can uncover areas of overspending or resource inefficiencies.",
    icon: "iconoir:reduce-round-arrow",
  },
  {
    title: "Increase profits",
    description:
      "BI can boost business profits by uncovering fresh market opportunities, enhancing marketing campaigns, and refining pricing strategies..",
    icon: "icon-park-outline:increase",
  },
  {
    title: "Improve customer service",
    description:
      "BI aids businesses in enhancing customer service through deeper customer insights and identifying areas for improved customer experiences..",
    icon: "mdi:customer-service",
  },
];
---

<ContentSection title="Features" id="benefits">
  <Fragment slot="lead">
    Easily connect to, model, and visualize your data, creating memorable
    reports
    <span class="text-primary"> personalized with your KPIs</span>
     and brand. Get fast,
    <span class="text-primary"> AI-powered answers</span>
     to your business questions.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
